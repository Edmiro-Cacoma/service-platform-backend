generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  phone     String   @unique
  password  String
  role      String
  otp       String?
  otpExpiresAt DateTime?
  resetToken String?
  resetTokenExpiresAt DateTime?
  createdAt DateTime @default(now())
}

model Service {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      String
  requesterId Int
  providerId  Int?
  createdAt   DateTime @default(now())
}